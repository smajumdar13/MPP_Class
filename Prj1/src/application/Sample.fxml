<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
   <center>
      <Pane minHeight="400.0" minWidth="600.0" prefHeight="313.0" prefWidth="239.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar layoutY="1.0" minWidth="600.0">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem id="new" mnemonicParsing="false" text="New" />
                    <MenuItem id="open" mnemonicParsing="false" text="Open" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem id="exit" mnemonicParsing="false" onAction="#closeApp" text="Exit" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem id="cut" mnemonicParsing="false" text="Cut" />
                        <MenuItem id="copy" mnemonicParsing="false" text="Copy" />
                        <MenuItem id="paste" mnemonicParsing="false" text="Paste" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem id="about" fx:id="abt" mnemonicParsing="false" onAction="#AboutMe" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Button fx:id="btnP" layoutX="246.0" layoutY="274.0" mnemonicParsing="false" onAction="#press" prefHeight="25.0" prefWidth="108.0" text="Press" />
            <Label fx:id="lbl" layoutX="179.0" layoutY="49.0" text="Hello!">
               <font>
                  <Font name="Baskerville Old Face" size="96.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </center>
</BorderPane>
